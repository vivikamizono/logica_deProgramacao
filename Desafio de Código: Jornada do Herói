// Leitura da posição inicial e total de passos
const posicaoInicial = parseInt(gets());
const totalPassos = parseInt(gets());

// Calcula a posição final do herói
const passosCompletos = Math.floor(totalPassos / 2);
const passosRestantes = totalPassos % 2;
const posicaoFinal = posicaoInicial + passosCompletos * 2 + (passosRestantes === 1 ? 1 : 0);

// Imprime a posição final
print("Posicao final do heroi:", posicaoFinal);
